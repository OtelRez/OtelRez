@using OtelRez.MVC.Areas.Admin.Models.VMs.Admin
@model MenuVM

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Menü Güncelle</title>
	<link rel="stylesheet" href="~/RegisterTemp/style.css">
</head>

<body class="sb-nav-fixed">

	<form asp-action="MenuGuncelle" method="post">
		<div class="user-details">
			<input type="hidden" asp-for="Id" />

			<div class="input-box">
				<span class="details">Ürün Adı</span>
				<input asp-for="UrunAdi" id="UrunAdi" required>
			</div>

			<div class="input-box">
				<span class="details">Ürün Açıklaması</span>
				<input asp-for="UrunAciklama" id="UrunAciklama">
			</div>

			<div class="input-box">
				<span class="details">Ürün Fiyatı</span>
				<input asp-for="Fiyat" id="Fiyat" required>
			</div>

			<div class="input-box">
				<label asp-for="MenuKategoriId">
					<span class="details">Ürün Kategorisi</span>
				</label>

				<select asp-for="MenuKategoriId" class="form-control" required>
					<option value="@ViewBag.MevcutKategoriId" selected>@ViewBag.MevcutKategori</option>

					@foreach (var kategori in ViewBag.Kategoriler)
					{
						<option value="@kategori.Value">@kategori.Text</option>
					}
				</select>
			</div>

			<div class="input-box">
				<div class="button">
					<input type="submit" value="Güncelle">
				</div>
			</div>
		</div>
	</form>
</body>
</html>