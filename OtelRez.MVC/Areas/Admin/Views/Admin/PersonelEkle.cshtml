@using OtelRez.MVC.Areas.Admin.Models.VMs.Admin
@model PersonelVM

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Dashboard - SB Admin</title>
	<link rel="stylesheet" href="~/RegisterTemp/style.css">
</head>

<body class="sb-nav-fixed">

	<form asp-action="PersonelEkle" method="post">
		<div class="user-details">
			<div class="input-box">
				<span class="details">Adı</span>
				<input asp-for="Adi" id="Adi" required>
			</div>

			<div class="input-box">
				<span class="details">Soyadı</span>
				<input asp-for="Soyadi" id="Soyadi" required>
			</div>

			<div class="input-box">
				<span class="details">Maaşı</span>
				<input asp-for="Maas" id="Maas" required>
			</div>

			<div class="input-box">
				<span class="details">İzin Hakkı</span>
				<input asp-for="IzinHakki" id="IzinHakki" required>
			</div>

			<div class="input-box">
				<label asp-for="PersonelMeslekId">
					<span class="details">Meslek</span>
				</label>

				<select asp-for="PersonelMeslekId" class="form-control" asp-items="ViewBag.Meslekler" required>
					<option value="">-- Meslek Seçiniz --</option>
				</select>
				<span asp-validation-for="PersonelMeslekId" class="text-danger"></span>
			</div>

			<div class="input-box">
				<label asp-for="RoleId">
					<span class="details">Rol</span>
				</label>

				<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roller" required>
					<option value="0">-- Role Seçiniz --</option>
				</select>
				<span asp-validation-for="RoleId" class="text-danger"></span>

			</div>

			<div class="input-box">
				<div class="button">
					<input type="submit" value="Kaydet">
				</div>
			</div>
		</div>
	</form>
</body>
</html>