@model List<Hizmetler>

@foreach (var item in Model)
{
	if (item.Id % 2 == 0)
	{
		<div class="dining-area">
			<div class="single-dining-area left-img" style="background-image: url('@Url.Content(item.PhotoPath)')">
				<div class="container">
					<div class="row justify-content-end">
						<div class="col-lg-8 col-md-8">
							<div class="dining-caption">
								<span>@item.Title</span>
								<h3>@item.SubTitle</h3>
								<p>@item.Description</p>

								@if(item.Title=="Restoranımız")
								{
									<a asp-action="RestMenu" asp-controller="Sayfa" class="btn border-btn">Menü<i class="ti-angle-right"></i> </a>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	else
	{
		<!-- single Right img -->
		<div class="dining-area">
			<div class="single-dining-area right-img" style="background-image: url('@Url.Content(item.PhotoPath)')">
				<div class="container">
					<div class="row justify-content-start">
						<div class="col-lg-8 col-md-8">
							<div class="dining-caption text-right">
								<span>@item.Title</span>
								<h3>@item.SubTitle</h3>
								<p>@item.Description</p>

								@if (item.Title == "Restoranımız")
								{
									<a asp-action="RestMenu" asp-controller="Sayfa" class="btn border-btn">Menü<i class="ti-angle-right"></i> </a>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
}